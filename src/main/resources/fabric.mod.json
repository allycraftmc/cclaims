{
  "schemaVersion": 1,
  "id": "cclaims",
  "version": "${version}",
  "name": "Container Claims",
  "description": "Protect and claim your containers",
  "authors": [
    "Tert0"
  ],
  "contact": {
    "homepage": "https://github.com/allycraftmc/cclaims",
    "issues": "https://github.com/allycraftmc/cclaims/issues",
    "sources": "https://github.com/allycraftmc/cclaims"
  },
  "license": "LGPL-3.0-only",
  "environment": "server",
  "entrypoints": {
    "main": [
      "de.tert0.containerclaims.ContainerClaimMod"
    ]
  },
  "mixins": [
    "cclaims.mixins.json"
  ],
  "depends": {
    "fabricloader": ">=${loader_version}",
    "fabric": "*",
    "minecraft": "${minecraft_version}"
  },
  "custom": {
    "lithium:options": {
      "mixin.block.hopper": false
    }
  }
}
